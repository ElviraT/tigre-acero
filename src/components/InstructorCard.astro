---
import { IMAGE_CONFIG } from '../config/images';

interface Props {
  name: string;
  rank: string;
  image: string;
  bio: string;
}

const { name, rank, image, bio } = Astro.props;
const placeholderUrl = IMAGE_CONFIG.instructors.placeholder.url;
---

<div class="bg-white rounded-xl shadow-lg overflow-hidden transition-transform duration-300 hover:shadow-xl hover:-translate-y-2">
  <div class="relative h-64 overflow-hidden">
    <div class="absolute inset-0 flex items-start justify-center">
      <img
        src={image}
        alt={`Instructor ${name}`}
        class="min-h-full min-w-full object-cover object-top transition-transform duration-500 hover:scale-105"
        onError={`this.src='${placeholderUrl}'`}
      />
    </div>
    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent p-4">
      <h3 class="text-xl font-bold text-white">{name}</h3>
      <span class="text-red-400 font-medium">{rank}</span>
    </div>
  </div>
  <div class="p-6">
    <p class="text-gray-600 mb-4">{bio}</p>
    <div class="flex justify-between items-center">
      <div class="flex space-x-1">
        {[...Array(5)].map((_, i) => (
          <svg
            class="w-5 h-5 text-red-400"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>
      <a
        href="#contacto"
        class="text-sm font-medium text-red-600 hover:text-red-700 transition-colors"
      >
        Contactar â†’
      </a>
    </div>
  </div>
</div>

<style>
  /* Efecto de hover en la tarjeta */
  .instructor-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .instructor-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  /* Estilos responsivos */
  @media (max-width: 768px) {
    .instructor-card {
      max-width: 320px;
      margin: 0 auto;
    }
  }
</style>
